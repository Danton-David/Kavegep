<Window x:Class="KávégépAutomata_Ulicny_Balássy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KávégépAutomata_Ulicny_Balássy"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="500" Background="RosyBrown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="uzenet" HorizontalAlignment="Left" Margin="129,83,0,0" TextWrapping="Wrap" Text="Jó napot :)" VerticalAlignment="Top" Width="145" FontSize="20" Height="54" Foreground="#FF00F104" Background="Black" Grid.Column="1" TextChanged="osszeg_TextChanged"/>
        <Button  Name="Espresso" Content="Espresso" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="Espresso_Click"/>
        <Button  Name="Americano" Content="Americano" HorizontalAlignment="Left" Margin="85,83,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="Americano_Click"/>
        <Button  Name="Cappuccino" Content="Cappuccino" HorizontalAlignment="Left" Margin="160,83,0,0" VerticalAlignment="Top" Height="50" Width="70" Grid.ColumnSpan="2" Click="Cappuccino_Click"/>
        <Button  Name="Latte" Content="Latte" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="Latte_Click"/>
        <Button  Name="Macchiato" Content="Macchiato" HorizontalAlignment="Left" Margin="85,138,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="Macchiato_Click"/>
        <Button  Name="White" Content="Flat White" HorizontalAlignment="Left" Margin="160,138,0,0" VerticalAlignment="Top" Height="50" Width="70" Grid.ColumnSpan="2" Click="White_Click"/>
        <Button  Name="Mocha" Content="Mocha" HorizontalAlignment="Left" Margin="10,193,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="Mocha_Click"/>
        <Button  Name="Cortado" Content="Cortado" HorizontalAlignment="Left" Margin="85,193,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="Cortado_Click"/>
        <Button  Name="Ristretto" Content="Ristretto" HorizontalAlignment="Left" Margin="160,193,0,0" VerticalAlignment="Top" Height="50" Width="70" Grid.ColumnSpan="2" Click="Ristretto_Click"/>
        <Button  Name="Affogato" Content="Affogato" HorizontalAlignment="Left" Margin="10,248,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="Affogato_Click"/>
        <Button  Name="IcedCoffee" Content="Iced Coffee" HorizontalAlignment="Left" Margin="85,248,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="IcedCoffee_Click"/>
        <Button  Name="IcedLatte" Content="Iced Latte" HorizontalAlignment="Left" Margin="160,248,0,0" VerticalAlignment="Top" Height="50" Width="70" Grid.ColumnSpan="2" Click="IcedLatte_Click"/>
        <Button  Name="HotCocoa" Content="HOT Cocoa" HorizontalAlignment="Left" Margin="10,303,0,0" VerticalAlignment="Top" Height="50" Width="220" Grid.ColumnSpan="2" Click="HotCocoa_Click"/>
        <Button  Name="Pay" Content="Pay" HorizontalAlignment="Left" Margin="204,142,0,0" VerticalAlignment="Top" Height="50" Width="70" Click="Pay_Click" Grid.Column="1"/>
        <Button  Name="Reset" Content="Reset" HorizontalAlignment="Center" Margin="0,142,0,0" VerticalAlignment="Top" Height="50" Width="70" Grid.Column="1" Click="Reset_Click"/>


    </Grid>
</Window>
